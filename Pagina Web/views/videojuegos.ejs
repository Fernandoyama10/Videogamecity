<%- include layouts/header_regis.ejs %>
<header>
     <style>
      .card {
        opacity: 0.8;
        filter: alpha(opacity=60);
      }
      .card-title {
        font-weight:bold;
        text-align: center;
      }
      .card-text {
        text-align: justify;
      }
      
      .modal-header {
        background-image: linear-gradient(#7FDBFF,white);
      }
      .modal-footer {
        background-image: linear-gradient(white,#7FDBFF);
      }
      #left-panel-link {
        position: relative;
        left: 5%;
        background-color: #555;
        color: white;
        font-size: 16px;
        padding: 12px 20px;
        border: none;
        cursor: pointer;
        border-radius: 5px;
      }
      #right-panel-link {
        position: absolute;
        right: 10%;
        background-color: #555;
        color: white;
        font-size: 16px;
        padding: 12px 20px;
        border: none;
        cursor: pointer;
        border-radius: 5px;
      }
      .sep {
        height: 25px;
      }

     </style>
<div class="container">
  <hr>
  <br>
  <div class="banner2">
    <div class="">
        <div class="row fill_height">
            <div class="col-lg-12">

              <div class="row">
                <div class="col-lg-2 col-md-2 col-sm-4"></div>
              <div class="col-lg-2 col-md-2 col-sm-4"><center>
                <a href="#"><img style=" padding-left: 40px; height: 178px; width: 170px;" class="card-img-top imagen-lista" src="https://cdn.discordapp.com/attachments/756363152865624124/803420969108504606/design-b019565b-3766-4e3b-8520-d4a282ccc177.png" alt=""></a>
              </center>
              </div>
            
              <% if(user){ %>
                <div class="col-lg-4 col-md-2 col-sm-4" style="padding-top:40px;"><a class="btn btn-success btn-block" style="text-align: center;"  href="../recomendar"><H5>Recomienda tu juego favorito ! <i class="fas fa-plus-circle"></i></H5></a></div>
            
              <% } else{ %>  
            
                  <div class="col-lg-4 col-md-2 col-sm-4" style="padding-top:40px;"><a class="btn btn-success btn-block" style="text-align: center;"  href="../recomendar"><H6>INICIA SESIÃ“N PARA RECOMENDAR JUEGOS </H6></a></div>

             <% } %>
            
              
             
             
              <div class="col-lg-2 col-md-2 col-sm-4"><center><a><img style="padding-right: 20px; height: 180px; width: 180px;" class="card-img-top imagen-lista" src="https://cdn.discordapp.com/attachments/756363152865624124/803374432038813696/vinilos-infantiles-super-mario-bros.png" alt=""></a></center></div>
              <div class="col-lg-2 col-md-2 col-sm-4"></div>
            </div>
        </div>
    </div>
  </div>
  </div>



  <br>
  <div class="linea-separadora"></div>
  
    <!-- Page Content -->
    <div class="container">
      <div class="row">
        <div class="col offset-lg-3">
          <% if(typeof messagessucces!= "undefined" && messagessucces) { %>
            <div class="alert alert-success alert-dismissible fade show" style="width: 500px;" role="alert"><strong style="padding-left: 120px;"><%= messagessucces %></strong>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
            </div>
        <% } %>
        <% if(typeof message!= "undefined" && message) { %>
          <div class="alert alert-danger alert-dismissible fade show" style="width: 550px;" role="alert"><strong style="padding-left: 50px;"><%= message %></strong>
                  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
          </div>
      <% } %>

        <br> 
 <h1 id="rankings" class="my-4 bienvenida-text">Videojuego(s) encontrado(s): 
        </div>
        
      </div>
      <!-- Marketing Icons Section -->
      <div class="row">

                                                    
        <% for(var videojuego=0;videojuego<Videojuegos.length;videojuego++) { %>

          <div class="col-sm-3 portfolio-item " style="padding-top: 45px;">
            <ul class="list-group" >
              <li class="list-group-item list-group-item-warning"><i class="fa fa-star"style="font-size:20px;"></i>   Votos: <%=Videojuegos[videojuego].votos%> </li>
            
            </ul>
            <div class="card h-100 sombra-caja-lista">
              
              <a href="#"><img class="card-img-top imagen-lista" src="<%=Videojuegos[videojuego].imagen%>" alt=""></a>
              <div class="card-body">
                <h4 style="font-weight:500; height: 50px;"  class="card-title">
                  <a href="#"><%=Videojuegos[videojuego].titulo%>...</a>
              </h4> 
             
              <p style="height: 70px;" class="card-text"><%=Videojuegos[videojuego].descripcion%>...</p>
<br>
              <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal<%=Videojuegos[videojuego].id_videojuego%>">
                Ver
              </button>

              <% if(user){ %>
                <form style="height: 2px;" action="/auth/votarjuego" method="POST">  
                  <input type="name" class="form-control form-control-sm" style="display: none;"  value="<%=Videojuegos[videojuego].id_videojuego%>" name="id_videojuego"  autocomplete="off" required>
                  <input type="name" class="form-control form-control-sm" style="display: none;"  value="<%=Videojuegos[videojuego].titulo%>" name="titulo"  autocomplete="off" required>
                  <button type="submit" enable=false class="btn btn-success" data-toggle="modal" data-target="#exampleModal<%=Videojuegos[videojuego].id_videojuego%>">
                    Votar
                  </button>
                  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modal<%=Videojuegos[videojuego].id_videojuego%>1">
                    Ver
                  </button>
                </form>
              <% } else{ %>  
                <div style="height: 2px;"> <a class="btn btn-success" href="../login">Votar</a>
                  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modal<%=Videojuegos[videojuego].id_videojuego%>1">
                    Ver
                  </button></div>
                   
             <% } %>
              </div>
            </div>
          </div>

          <% } %>
      </div>

      <!-- /.row -->

      <div class="row">                          
        <% for(var videojuego2=0;videojuego2<Videojuegos2.length;videojuego2++) { %>

                       <!-- Modal -->
                       <div class="modal fade" id="modal<%=Videojuegos2[videojuego2].id_videojuego%>1" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                          <div class="modal-content">
                            <div class="modal-header">
                              <h5 class="modal-title" id="exampleModalLabel"><%=Videojuegos2[videojuego2].titulo%> - Votos: <%=Videojuegos2[videojuego2].votos%> <i class="fa fa-star"style="font-size:20px;"></i></h5>
                              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                              </button>
                            </div>
                            <div class="modal-body">
                              <div >
                                <img src="<%=Videojuegos2[videojuego2].imagen%>" class="card-img-top imagencards" alt="imagen de video juegos">

                              </div>
                              <br>
                              <h5 style="height: 170px;" class="card-text"><%=Videojuegos2[videojuego2].descripcion%></h5>
                             
                            </div>
                            <div class="modal-footer">
                              <% if(user){ %>

                                <form action="/auth/votarjuego" method="POST">
                                  <button type="submit" enable=false class="btn btn-success" data-toggle="modal" data-target="#exampleModal<%=Videojuegos2[videojuego2].id_videojuego%>">
                                    Votar
                                  </button>
                                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                                  <div class="form-group">
                                    <input type="name" class="form-control form-control-sm" style="display: none;"  value="<%=Videojuegos2[videojuego2].id_videojuego%>" name="id_videojuego"  autocomplete="off" required>
                                    <input type="name" class="form-control form-control-sm" style="display: none;"  value="<%=Videojuegos2[videojuego2].titulo%>" name="titulo"  autocomplete="off" required>

                                </div>
                                </form>
                                <% } else{ %>  
                                  <a class="btn btn-success" href="../login">Votar</a>
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                                    <div class="form-group">
                                      <input type="name" class="form-control form-control-sm" style="display: none;"  value="<%=Videojuegos2[videojuego2].id_videojuego%>" name="id_videojuego"  autocomplete="off" required>
                                  </div>
  
                                  <% } %>                                      
                            </div>
                          </div>
                        </div>
                      </div>      

          <% } %>
      </div>


  
      <hr>
 

  
    </div>
  </header>
  <br>
  <br>
  <br>
  <br>
<%- include layouts/footer.ejs %>