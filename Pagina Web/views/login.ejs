<%- include layouts/header.ejs %>
<header>
<div class="banner">
    <div class="">
        <div class="row fill_height">
    
            <div class="col-lg-12">
                <div class="global-container">
                    <div class="card login-form">
                    <div class="card-body">
                        <h3 class="card-title text-center">Iniciar Sesión</h3>
                        <div class="text-center"><img style="height:70px;width:70px" src="/imagenes/estrella.png" alt=""></div>
                        
                        <div class="card-text">
                            <!--
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">Incorrect username or password.</div> -->
                            <% if(typeof message!= "undefined" && message) { %>
                                <div class="alert alert-danger alert-dismissible fade show" role="alert"><%= message %></div>

                            <% } %>
                            <div class="form-s">
                                <!-- to error: add class "has-danger" -->

                                <form action="/auth/login" method="POST">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1"></label>
                                        <input type="email" class="form-control form-control-sm" placeholder="Ingresa tu correo" name="correo" >
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1"></label>
                                       
                                        <input type="password" class="form-control form-control-sm" placeholder="Contraseña" name="contrasena">
                                    </div>
                                    <br>
                                    <br>
                                    <button type="submit" class="btn btn-primary btn-block">Login</button>
                                    <br>
                                    <br>
                                    <div class="sign-up">
                                        ¿No tienes cuenta? <a href="/registro">Registrate</a>
                                    </div>
                                </form>

                            
                            </div>
                        </div>
                    </div>
                </div>
                </div>
                
            </div>
        </div>
    </div>
</div>
</header>
<%- include layouts/footer.ejs %>